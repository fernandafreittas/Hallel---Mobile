<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="139dp"
        android:layout_height="113dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logohallel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastre-se"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/verde" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Completo :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/verde" />

    <EditText
        android:id="@+id/TxtNome"
        android:layout_width="360dp"
        android:layout_height="40sp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/backgroundtxt"
        android:hint="  Informe seu nome completo"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/verde" />

    <EditText
        android:id="@+id/TxtEmail"
        android:layout_width="360dp"
        android:layout_height="40sp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/backgroundtxt"
        android:hint="  Informe seu email"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/verde" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <EditText
            android:id="@+id/PsSenha"
            android:layout_width="360dp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/backgroundtxt"
            android:hint="  Informe sua senha"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/mostraSenha"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/olhosenha" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Senha :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/verde" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/PsConfirmarSenha"
            android:layout_width="360dp"
            android:layout_height="40sp"
            android:inputType="textPassword"
            android:background="@drawable/backgroundtxt"
            android:hint="  Confirme a sua senha"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/mostraConfirmarSenha"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="end|top"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/olhosenha" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtErro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:textColor="#BF1B1B" />


    <Button
        android:id="@+id/BtnCriarConta"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:text="Criar Conta"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/backgroundtxt"
        android:textColor="@color/white"
        android:backgroundTint="#002711"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JÃ¡ tenho uma conta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/verde" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/termosdeuso"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Termos de uso"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/verde" />

    </LinearLayout>
</LinearLayout>
