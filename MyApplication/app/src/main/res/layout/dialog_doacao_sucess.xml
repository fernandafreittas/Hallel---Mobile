<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"

    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imgDoacaosuces"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/image_75"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4Doacaosuces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sua doação foi realizada com sucesso! "
        android:textColor="@color/cortexto2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDoacaosuces" />

    <TextView
        android:id="@+id/subnfoDoacaosuces"
        android:layout_width="304dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:text="Clique em 'Continuar' para ir para a tela inicial."
        android:textAlignment="center"
        android:textColor="@color/cordetextohallel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4Doacaosuces" />

    <Button
        android:id="@+id/btndialogDoacaosuces"
        android:layout_width="114dp"
        android:layout_height="32dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/backgroundtxt"
        android:fontFamily="@font/inter"
        android:text="CONTINUAR"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/cortexto2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subnfoDoacaosuces" />

</androidx.constraintlayout.widget.ConstraintLayout>

