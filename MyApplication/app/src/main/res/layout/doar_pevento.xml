<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="739dp">

                <Button
                    android:id="@+id/btncontinuarcartao"
                    android:layout_width="129dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/fundo_button_verde"
                    android:text="Continuar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.457"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView15"
                    app:layout_constraintVertical_bias="0.151" />

                <TextView
                    android:id="@+id/titlePagamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Doar para o Evento"
                    android:textColor="@color/cordetextohallel"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.031" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="389dp"
                    android:layout_height="154dp"
                    android:layout_marginTop="44dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.454"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titlePagamento"
                    app:srcCompat="@drawable/fundo_cards" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="periodo:"
                    android:textColor="@color/cordetextohallel"
                    app:layout_constraintStart_toStartOf="@+id/imageView6"
                    app:layout_constraintTop_toTopOf="@+id/imageView6" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Escolher dia do mês para renovação:"
                    android:textColor="@color/cordetextohallel"
                    app:layout_constraintStart_toStartOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/rdioMensalmente" />

                <EditText
                    android:id="@+id/editTextNumber"
                    android:layout_width="165dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/input_text_cartao"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintStart_toStartOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView22" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toStartOf="@+id/textView23"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    app:srcCompat="@drawable/vector__2_" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="322dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Caso escolha um período fixo, a renovação do pagamento será automática."
                    android:textColor="@color/cordetextohallel"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="386dp"
                    android:layout_height="267dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23"
                    app:srcCompat="@drawable/fundo_cards" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/cordetextohallel"
                    android:text="Valores:"
                    android:textColor="@color/cordetextohallel"
                    app:layout_constraintStart_toStartOf="@+id/imageView15"
                    app:layout_constraintTop_toTopOf="@+id/imageView15" />


                <TextView
                    android:id="@+id/textVi4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="22dp"
                    android:backgroundTint="@color/cordetextohallel"
                    android:text="Escolher outro valor:"
                    android:textColor="@color/cordetextohallel"
                    app:layout_constraintStart_toStartOf="@+id/imageView15"
                    app:layout_constraintTop_toBottomOf="@+id/btn80" />

                <Button
                    android:id="@+id/btn20"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/botton_valores"
                    android:text="R$ 20,00"
                    android:textColor="@color/cortexto2"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/imageView15"
                    app:layout_constraintTop_toTopOf="@+id/imageView15" />

                <Button
                    android:id="@+id/btn50"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/botton_valores"
                    android:text="R$ 50,00"
                    android:textColor="@color/cortexto2"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView15"
                    app:layout_constraintTop_toTopOf="@+id/imageView15" />

                <Button
                    android:id="@+id/btn30"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/botton_valores"
                    android:text="R$ 30,00"
                    android:textColor="@color/cortexto2"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView15"
                    app:layout_constraintStart_toStartOf="@+id/imageView15"
                    app:layout_constraintTop_toTopOf="@+id/imageView15" />

                <Button
                    android:id="@+id/btn80"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="95dp"
                    android:background="@drawable/botton_valores"
                    android:text="R$ 80,00"
                    android:textColor="@color/cortexto2"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                    app:layout_constraintStart_toStartOf="@+id/imageView15" />

                <Button
                    android:id="@+id/btn100"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="148dp"
                    android:layout_marginBottom="95dp"
                    android:background="@drawable/botton_valores"
                    android:text="R$ 100,00"
                    android:textColor="@color/cortexto2"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                    app:layout_constraintEnd_toEndOf="@+id/imageView15" />

                <EditText
                    android:id="@+id/inptValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/input_text_cartao"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                    app:layout_constraintStart_toStartOf="@+id/imageView15" />

                <RadioButton
                    android:id="@+id/rdioPontualmente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:text="Pontualmente"
                    android:textColor="#005424"
                    app:layout_constraintStart_toStartOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" />

                <RadioButton
                    android:id="@+id/rdioMensalmente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="37dp"
                    android:text="Mensalmente"
                    android:textColor="#005424"
                    app:layout_constraintStart_toEndOf="@+id/rdioPontualmente"
                    app:layout_constraintTop_toTopOf="@+id/imageView6" />

                <RadioButton
                    android:id="@+id/rdioAnualmente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="37dp"
                    android:text="Anualmente"
                    android:textColor="#005424"
                    app:layout_constraintEnd_toEndOf="@+id/imageView6"
                    app:layout_constraintStart_toEndOf="@+id/rdioMensalmente"
                    app:layout_constraintTop_toTopOf="@+id/imageView6" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>