        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCertezaDeleventolocal" />


    <Button
        android:id="@+id/btndialogsimlocal"
        android:layout_width="91dp"
        android:layout_height="35dp"
