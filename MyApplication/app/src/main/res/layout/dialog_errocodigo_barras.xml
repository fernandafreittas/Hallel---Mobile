<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"

    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imgCodErr"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/image_74"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4Cod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Erro ao copiar o código de barras para a sua área de transferência"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCodErr" />

    <TextView
        android:id="@+id/subnfoCod"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:text="Por favor tente novamente."
        android:textAlignment="center"
        android:textColor="#535353"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4Cod" />

    <Button
        android:id="@+id/btndialogCodsuc"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroundtxt"
        android:fontFamily="@font/inter"
        android:text="FECHAR"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subnfoCod" />

</androidx.constraintlayout.widget.ConstraintLayout>

