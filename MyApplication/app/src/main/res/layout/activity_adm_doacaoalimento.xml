<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vpcart"
                android:layout_width="match_parent"
                android:layout_height="739dp"
                android:background="#FFFFFF">

                <TableLayout
                    android:id="@+id/tableLayoutDoacaoDinheiro"
                    android:layout_width="341dp"
                    android:layout_height="559dp"
                    android:background="@drawable/background_edittext"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.908">


                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:padding="8dp"
                            android:text="Doador"
                            android:textColor="@color/cortexto2"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:padding="8dp"
                            android:text="Objeto"
                            android:textColor="@color/cortexto2"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:padding="8dp"
                            android:text="Quantidade"
                            android:textColor="@color/cortexto2"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </TableRow>


                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="Fernanda Freitas"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold"
                            android:maxLength="19"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="Carrinho"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="5"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="Gisele Saraiva Vieira"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold"
                            android:maxLength="15"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="Boneca"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="19"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="Lorenzo Aviz dos Santos"
                            android:maxLength="19"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="Arroz"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="8dp"
                            android:text="12"
                            android:textColor="@color/cordetextohallel"
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/titledoacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Doações de Objetos e Alimentos"
                    android:textColor="@color/cordetextohallel"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.031" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="340dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/fundo_filtro"
                    app:layout_constraintBottom_toTopOf="@+id/tableLayoutDoacao"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.464"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titledoacao"
                    app:layout_constraintVertical_bias="0.37" />

                <Button
                    android:id="@+id/btnAz"
                    android:layout_width="59dp"
                    android:layout_height="30dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/inter_semibold"
                    android:text="A - Z"
                    android:textColor="@color/cordetextohallel"

                    app:layout_constraintBottom_toBottomOf="@+id/imageView22"
                    app:layout_constraintStart_toStartOf="@+id/imageView22"
                    app:layout_constraintTop_toTopOf="@+id/imageView22" />

                <Button
                    android:id="@+id/btnZa"
                    android:layout_width="59dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="84dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/inter_semibold"

                    android:text="Z - A"
                    android:textColor="@color/cordetextohallel"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView22"
                    app:layout_constraintStart_toStartOf="@+id/imageView22"
                    app:layout_constraintTop_toTopOf="@+id/imageView22"
                    app:layout_constraintVertical_bias="0.571" />

                <Button
                    android:id="@+id/btnOrdemCronologica"
                    android:layout_width="174dp"
                    android:layout_height="29dp"
                    android:layout_marginEnd="5dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Ordem cronológica"

                    android:textColor="@color/cordetextohallel"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView22"
                    app:layout_constraintEnd_toEndOf="@+id/imageView22"
                    app:layout_constraintTop_toTopOf="@+id/imageView22" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>